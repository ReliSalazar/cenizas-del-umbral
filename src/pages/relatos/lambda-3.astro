---
import PostLayout from "../../layouts/PostLayout.astro";
import Terminal from "../../components/Terminal.svelte";

const lines = [
  {
    parts: [
      {
        text: "Aún mantengo la señal.",
        class: "text-text-primary",
        speed: 35,
      },
    ],
  },
  {
    parts: [
      {
        text: "Las balizas están en loop.",
        class: "text-text-primary",
        speed: 35,
      },
    ],
    delayAfter: 400,
  },
  {
    parts: [
      {
        text: "Si hay algo allá afuera que aún escuche",
        class: "text-text-secondary italic",
        speed: 40,
      },
      {
        text: "...",
        class: "font-mono animate-pulse",
        speed: 200,
      },
    ],
    delayAfter: 1000,
  },

  {
    parts: [
      {
        text: "Esta es la última señal de la estación Lambda-3.",
        class: "font-bold",
        speed: 45,
      },
    ],
    delayAfter: 600,
  },

  {
    parts: [
      {
        text: "El núcleo se estabilizó, pero el resto no.",
        speed: 35,
      },
    ],
    delayAfter: 800,
  },
  {
    parts: [
      {
        text: "Los niveles de oxígeno son mínimos.",
        speed: 35,
      },
    ],
  },
  {
    parts: [
      {
        text: "La IA de mantenimiento se desconectó hace 4 horas.",
        speed: 40,
      },
    ],
    delayAfter: 600,
  },
  {
    parts: [
      {
        text: "Voluntariamente",
        class: "text-text-secondary",
        speed: 100,
      },
      {
        text: "...",
        class: "font-mono animate-pulse",
        speed: 300,
      },
    ],
    delayAfter: 700,
  },

  {
    parts: [
      {
        text: "No queda tripulación.",
        class: "font-bold",
        speed: 50,
      },
    ],
  },
  {
    parts: [
      {
        text: "No quedan objetivos.",
        class: "font-bold text-text-secondary",
        speed: 50,
      },
    ],
    delayAfter: 900,
  },

  {
    parts: [
      {
        text: "...",
        class: "font-mono animate-pulse",
        speed: 200,
      },
    ],
    delayAfter: 1200,
  },

  {
    parts: [
      {
        text: "Me llamo Elen Korr.",
        class: "text-primary-accent font-bold",
        speed: 40,
      },
    ],
  },
  {
    parts: [
      {
        text: "Suboficial de observación orbital.",
        speed: 30,
      },
    ],
    delayAfter: 600,
  },
  {
    parts: [
      {
        text: "No tengo entrenamiento para esto.",
        speed: 60,
      },
    ],
  },
  {
    parts: [
      {
        text: "Pero alguien tenía que quedarse para apagar las luces.",
        class: "italic",
        speed: 35,
      },
    ],
    delayAfter: 900,
  },

  {
    parts: [
      {
        text: "...",
        class: "font-mono animate-pulse",
        speed: 200,
      },
    ],
    delayAfter: 1200,
  },

  {
    parts: [
      {
        text: "Recibimos una transmisión hoy.",
        speed: 30,
      },
    ],
    delayAfter: 700,
  },
  {
    parts: [
      {
        text: "Creo que era Umbasa.",
        speed: 60,
      },
    ],
    delayAfter: 500,
  },
  {
    parts: [
      {
        text: "O tal vez un eco de nuestros propios mensajes.",
        class: "text-text-secondary",
        speed: 35,
      },
    ],
    delayAfter: 1200,
  },

  {
    parts: [
      {
        text: "Quisimos advertirlos. ",
        class: "font-bold",
        speed: 90,
      },
      {
        text: "Nadie respondió.",
        class: "text-text-secondary",
        speed: 80,
      },
    ],
    delayAfter: 900,
  },

  {
    parts: [
      {
        text: "Resistimos más allá del último protocolo.",
        speed: 35,
      },
    ],
  },
  {
    parts: [
      {
        text: "Lo llamábamos el umbral del polvo.",
        class: "italic",
        speed: 35,
      },
    ],
  },
  {
    parts: [
      {
        text: "El punto donde toda función deja de tener sentido.",
        speed: 30,
      },
    ],
  },
  {
    parts: [
      {
        text: "Pero uno elige seguir.",
        class: "font-bold",
        speed: 35,
      },
    ],
    delayAfter: 1000,
  },

  {
    parts: [
      {
        text: "Y elegí quedarme. Porque alguien debía recordar.",
        speed: 35,
      },
    ],
    delayAfter: 600,
  },
  {
    parts: [
      {
        text: "Porque incluso en el polvo... aún hay testigos.",
        speed: 70,
      },
    ],
    delayAfter: 1200,
  },

  {
    parts: [
      {
        text: "La temperatura está cayendo.",
        speed: 30,
      },
    ],
  },
  {
    parts: [
      {
        text: "El sistema de reciclaje fallará pronto.",
        speed: 30,
      },
    ],
    delayAfter: 600,
  },

  {
    parts: [
      {
        text: "...",
        class: "font-mono animate-pulse",
        speed: 200,
      },
    ],
    delayAfter: 1200,
  },

  {
    parts: [
      {
        text: "Tomé la medalla de mi hermano.",
        speed: 30,
      },
    ],
  },
  {
    parts: [
      {
        text: "La colgué junto al panel de comunicaciones.",
        speed: 30,
      },
    ],
    delayAfter: 700,
  },
  {
    parts: [
      {
        text: "No quiero que se pierda en la oscuridad.",
        class: "italic",
        speed: 35,
      },
    ],
    delayAfter: 1200,
  },

  {
    parts: [
      {
        text: "Si alguien recupera esta grabación...",
        speed: 30,
      },
    ],
    delayAfter: 800,
  },
  {
    parts: [
      {
        text: "ya saben lo que hicimos.",
        speed: 30,
      },
    ],
    delayAfter: 600,
  },
  {
    parts: [
      {
        text: "Estuvimos solos. ",
        speed: 30,
      },
      {
        text: "Pero no fuimos insignificantes.",
        speed: 30,
      },
    ],
    delayAfter: 800,
  },
  {
    parts: [
      {
        text: '"Así nos lo enseñaron. Y eso basta."',
        class: "italic",
        speed: 50,
      },
    ],
    delayAfter: 1000,
  },

  {
    parts: [
      {
        text: "Korr fuera.",
        class: "text-tertiary-accent font-bold",
        speed: 80,
      },
    ],
  },
];
---

<PostLayout>
  <div class="prose prose-invert max-w-none">
    <header class="mb-8">
      <p class="text-sm text-text-secondary mb-2">
        [Archivo recuperado // Última transmisión: Lambda-3]
      </p>
      <h1 class="text-3xl md:text-4xl font-bold text-primary-accent mb-4">
        Lambda-3
      </h1>
      <div class="border-l-2 border-primary-accent pl-4 my-6">
        <p class="text-text-primary">
          <span class="block font-bold">Unidad Lambda-3</span>
          <span class="block text-sm">Fecha desconocida</span>
          <span class="block text-xs text-text-secondary italic">
            Transmisión clase: Epitafio (autoactivada)
          </span>
        </p>
      </div>
    </header>

    <Terminal client:load lines={lines} lastPrompt />
  </div>
</PostLayout>
