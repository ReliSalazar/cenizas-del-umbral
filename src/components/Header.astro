---
const { title = "Cenizas del Umbral" } = Astro.props;
const titleParts = title.split(" ");
---

<header class="relative z-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex items-center justify-between relative z-10">
      <div
        class="absolute inset-0 bg-cover bg-center opacity-10 pointer-events-none"
        style="background-image: url('data:image/svg+xml;base64,');"
      >
      </div>
      <div class="flex items-center">
        <a
          href="/"
          class="group relative flex items-center text-2xl md:text-3xl font-bold tracking-tight"
          aria-label="Inicio"
        >
          <span
            class="inline-block transform transition-transform duration-500 group-hover:rotate-180"
          >
            <span class="text-primary-accent">λ</span>
          </span>
          <span class="ml-2 relative">
            <span
              class="bg-clip-text bg-gradient-to-r from-primary-accent to-secondary-accent"
            >
              {titleParts[0]}
            </span>
          </span>
          <span class="text-gray-400 ml-1">
            {titleParts.slice(1).join(" ")}
          </span>

          <span
            class="absolute -inset-2 bg-gradient-to-r from-primary-accent/20 to-secondary-accent/20 opacity-0 group-hover:opacity-100 blur-md transition-opacity duration-300 -z-10"
          ></span>
        </a>
      </div>

      <nav
        class="hidden md:flex items-center space-x-1 bg-gradient-to-r from-darker-bg/80 via-card-bg/50 to-darker-bg/80 backdrop-blur-sm px-2 py-1"
      >
        <a
          href="/"
          class="px-4 py-2 text-sm font-medium text-text-secondary hover:text-primary-accent hover:bg-primary-accent/10 transition-all duration-300 relative group"
        >
          Inicio
          <span
            class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-accent transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="/relatos"
          class="px-4 py-2 text-sm font-medium text-text-secondary hover:text-secondary-accent hover:bg-secondary-accent/10 transition-all duration-300 relative group"
        >
          Relatos
          <span
            class="absolute bottom-0 left-0 w-0 h-0.5 bg-secondary-accent transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="/contacto"
          class="px-4 py-2 text-sm font-medium text-text-secondary hover:text-tertiary-accent hover:bg-tertiary-accent/10 transition-all duration-300 relative group"
        >
          Contacto
          <span
            class="absolute bottom-0 left-0 w-0 h-0.5 bg-tertiary-accent transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
      </nav>

      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-text-secondary hover:text-text-primary hover:bg-card-bg/50 focus:outline-none focus:ring-2 focus:ring-primary-accent"
        aria-label="Menú de navegación"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <div
      id="mobile-menu"
      class="md:hidden hidden mt-4 pt-4 border-t border-border-color/30 bg-card-bg/80 backdrop-blur-sm p-4 shadow-lg"
    >
      <div class="flex flex-col space-y-2">
        <a
          href="/"
          class="px-4 py-3 text-base font-medium hover:bg-primary-accent/10 hover:text-primary-accent transition-colors duration-200"
        >
          Inicio
        </a>
        <a
          href="/relatos"
          class="px-4 py-3 text-base font-medium hover:bg-secondary-accent/10 hover:text-secondary-accent transition-colors duration-200"
        >
          Relatos
        </a>
        <a
          href="#contacto"
          class="px-4 py-3 text-base font-medium hover:bg-tertiary-accent/10 hover:text-tertiary-accent transition-colors duration-200"
        >
          Contacto
        </a>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const mobileMenuButton = document.getElementById("mobile-menu-button");
      const mobileMenu = document.getElementById("mobile-menu");

      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener("click", () => {
          const isExpanded =
            mobileMenuButton.getAttribute("aria-expanded") === "true";
          mobileMenuButton.setAttribute("aria-expanded", String(!isExpanded));
          mobileMenu.classList.toggle("hidden");

          const icon = mobileMenuButton.querySelector("svg");
          if (icon) {
            icon.innerHTML = isExpanded
              ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />'
              : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
          }
        });
      }
    });
  </script>
</header>
